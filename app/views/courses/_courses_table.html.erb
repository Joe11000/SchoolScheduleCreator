    <td><%= text_field_tag course.course_number, nil, value: course.course_number, class: "row_course_number", id: "" %></td>
    <td><%= text_field_tag course.min_students_to_teach, nil, value: course.min_students_to_teach, class: "row_min_students_to_teach", id:""%></td>
    <td><%= image_tag 'delete.png', class: 'delete_img', size: "50x50" %></td>
